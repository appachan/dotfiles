// Place your key bindings in this file to overwrite the defaults
[
  // VimEmulator settings
  // disable default settings
  {
    "key": "ctrl+j",
    "when": "editorTextFocus"
  },
  // inInsertMode
  {
    "key": "ctrl+j",
    "command": "vim.Esc",
    "when": "editorTextFocus && vim.inInsertMode"
  },
  // inVisualMode
  {
    "key": "ctrl+j",
    "command": "vim.Esc",
    "when": "editorTextFocus && vim.inVisualMode"
  },

  // scrollkey settings
  {
    "key": "ctrl+f",
    "command": "scrollkey.down2",
    "when": "editorTextFocus && vim.inNormalMode"
  },
  {
    "key": "ctrl+b",
    "command": "scrollkey.up2",
    "when": "editorTextFocus && vim.inNormalMode"
  },
  
  // redo settings
  {
    "key": "ctrl+r",
    "command": "redo",
    "when": "editorTextFocus && vim.inNormalMode"
  }
  
