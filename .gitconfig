### Git global configurations ###

[user]
  name  = appachan
  email = appachan.hotel@gmail.com 

[github]
  user = appachan

[color]
  diff = auto
  status = auto
  branch = auto

[alias]
  graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  wdiff = diff --word-diff
  elog = ! git log --oneline --color | emojify | less -r

[core]
  editor = nvim

[ghq]
  root = ~/work/src/

[rebase]
	autostash = true
